<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport"
				content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
	<meta http-equiv="X-UA-Compatible" content="ie=edge">
	<link rel="stylesheet" href="/resources/styles/main_out.css"/>
	<title>Dentist Clinic</title>
</head>
<body class="bg-slate-100">

<div class="p-5">
	{% include 'auth/navbar.twig' %}
	{% if FLASH() %}
		{% if FLASH().success %}
			<div class="bg-emerald-100 border mb-2 border-emerald-400 text-emerald-700 px-4 py-3 rounded relative"
					 role="alert">
				<strong class="font-bold">SUCCESS!</strong>
				<span class="block sm:inline">{{ FLASH().success }}</span>
			</div>
		{% endif %}
		{% if FLASH().message %}
			<div class="bg-blue-100 border mb-2 border-blue-400 text-blue-700 px-4 py-3 rounded relative" role="alert">
				<strong class="font-bold">INFO!</strong>
				<span class="block sm:inline">{{ FLASH().message }}</span>
			</div>
		{% endif %}
		{{ CLEAR() }}
	{% endif %}

	{% block content %}{% endblock %}
</div>
</body>
</html>